@model PruebaAnthonyAlvarez.Models.ViewModels.SegurosViewModel
@{
    ViewBag.Title = "Editar Seguro";
}
<div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="~/Home/Index">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Seguros/Index">Seguro <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Asegurados/Index">Asegurados</a>
                </li>
            </ul>
        </div>
    </nav>
</div>
@using (Html.BeginForm("EditarSeguro", "Seguros", FormMethod.Post))
{
    <div class="row flex-center" style="margin-top:3vw">
        <div class="col-6" id="fondo">
            <h2 style="margin-top: 2vw;" class="flex-center">@ViewBag.Title</h2>
            <div style="margin-top:4vw">
                @Html.HiddenFor(d => d.CodigoSeguro)
            </div>
            <div>
                @Html.LabelFor(d => d.NombreSeguro, null, new { @class = "parrafo" })
                @Html.TextBoxFor(d => d.NombreSeguro, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.NombreSeguro, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Prima, null, new { @class = "parrafo" })
                @Html.TextBoxFor(d => d.Prima, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Prima, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.SumaAseguradora, null, new { @class = "parrafo" })
                @Html.TextBoxFor(d => d.SumaAseguradora, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.SumaAseguradora, null, new { @class = "red" })
            </div>

            <div class="col-12 flex-center" style="margin-top: 6vw">
                <input type="submit" value="Editar" class="btn btn-success" style="width: 49%;" />
            </div>
        </div>

    </div>
}



