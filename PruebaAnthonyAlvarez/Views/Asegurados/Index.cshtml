
@{
    ViewBag.Title = "Asegurados";
}

<div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="~/Home/Index">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Seguros/Index">Seguro <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Asegurados/Index">Asegurados</a>
                </li>
            </ul>
        </div>
    </nav>
</div>


<h2 class="flex-center">@ViewBag.Title</h2>

<div class=" row justify-content-center">
    <div class="col-12" style="padding-top:1vw">
        <div class="text-center text-dark"><p style="font-size:15px"><b>Suba el archivo que contiene los datos de los asegurados </b></p></div>
        <form id="formularioAsegurados" enctype="multipart/form-data" style="padding-top:2vw">
            <input type="file" id="fileUpload" name="files" onchange="" accept=".txt"/>
        </form>
    </div>
</div>

<br />

<div class="row">
    <div class="col-12">
        <table class="table" id="aseguradoratabla">
            <thead>
                <tr>
                    <th>Cedula</th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Telefono</th>
                    <th class="text-center">Accion</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="modalSeguro">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ingresar Seguros a los Clientes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="bodyModal">
                <h3><b>Elija los seguros que quiere asignar</b></h3>
                <div id="checkModal">

                </div>
            </div>
            <div class="modal-footer" id="modalFooter">
                
            </div>
        </div>
    </div>
</div>








<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.css" />


@section Scripts{

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.js"></script>

    <script src="~/js/asegurados.js"></script>
}